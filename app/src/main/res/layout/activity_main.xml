<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- your content layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <com.sothree.slidinguppanel.SlidingUpPanelLayout
                android:id="@+id/sliding_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                sothree:umanoPanelHeight="64dp"
                sothree:umanoShadowHeight="4dp"
                sothree:umanoParallaxOffset="100dp"
                sothree:umanoDragView="@+id/dragView"
                sothree:umanoOverlay="true"
                sothree:umanoScrollableView="@+id/list">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="false">

                    <!-- PUSH DOWN -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <!-- MAIN CONTENT -->
                    <FrameLayout
                        android:id="@+id/flContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </FrameLayout>
                </LinearLayout>


                <!-- SLIDING LAYOUT -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="false"
                    android:id="@+id/dragView">

                    <!-- BOTTOM PANEL height 64dp -->
                    <LinearLayout
                        android:id="@+id/bottomPanel"
                        android:background="#DC0091EA"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/panel_front"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="8dp"
                                android:background="@drawable/p_front"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="5dp"/>
                            <ImageButton
                                android:id="@+id/panel_play"
                                android:layout_width="53dp"
                                android:layout_height="53dp"
                                android:padding="8dp"
                                android:background="@drawable/p_play"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="45dp"/>
                            <ImageButton
                                android:id="@+id/panel_next"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="8dp"
                                android:background="@drawable/p_next"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="98dp" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/btn_expand"
                                android:layout_toRightOf="@+id/panel_next"
                                android:layout_marginLeft="9dp">
                                <TextView
                                    android:text="Paradise"
                                    android:id="@+id/panelAlbumName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#f2f2f2"/>
                                <TextView
                                    android:text="Coldplay - Mylo Xyloto歐巴"
                                    android:id="@+id/panelSongName"
                                    android:textColor="#f2f2f2"
                                    android:layout_width="150dp"
                                    android:layout_height="20dp"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:singleLine="true"
                                    android:scrollHorizontally="true"/><requestFocus/>
                            </LinearLayout>
                            <ImageButton
                                android:id="@+id/btn_expand"
                                android:padding="8dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_expand"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>


                    <!--  PLAYER  -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="0dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="65dp"
                        android:background="@drawable/background">

                        <ImageView
                            android:id="@+id/albumImage"
                            android:layout_width="220dp"
                            android:layout_height="220dp"
                            android:layout_marginTop="25dp"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/album" />

                        <ImageView
                            android:id="@+id/btnPlayl"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/l"
                            android:layout_marginTop="440dp"
                            android:layout_centerHorizontal="true"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/btnPlay"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/play"
                            android:layout_marginTop="415dp"
                            android:layout_centerHorizontal="true"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageView
                            android:id="@+id/btnFrontl"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/l"
                            android:layout_marginTop="450dp"
                            android:layout_marginLeft="57dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/btnFront"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/front"
                            android:layout_marginTop="445dp"
                            android:layout_marginLeft="62dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageView
                            android:id="@+id/btnNextl"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/l"
                            android:layout_marginTop="450dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="57dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/btnNext"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/next"
                            android:layout_marginTop="445dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="62dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageView
                            android:id="@+id/btnRel"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/l"
                            android:layout_marginTop="450dp"
                            android:layout_marginLeft="1dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/btnRe"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/re_off"
                            android:layout_marginTop="435dp"
                            android:layout_marginLeft="13dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageView
                            android:id="@+id/btnRandoml"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/l"
                            android:layout_marginTop="450dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="1dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/btnRandom"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/random_off"
                            android:layout_marginTop="435dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="13dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <TextView
                            android:id="@+id/albumName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textAlignment="center"
                            android:layout_marginTop="300dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:text="專輯名稱" />

                        <TextView
                            android:id="@+id/musicName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textAlignment="center"
                            android:layout_marginTop="323dp"
                            android:layout_centerHorizontal="true"
                            android:textSize="16sp"
                            android:text="歌手名稱-Music Name" />

                        <TextView
                            android:id="@+id/runTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="375dp"
                            android:layout_marginLeft="25dp"
                            android:textSize="14sp"
                            android:text="0:00" />

                        <TextView
                            android:id="@+id/fullTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="375dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="25dp"
                            android:textSize="14sp"
                            android:text="4:20" />


                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="370dp"
                            android:layout_centerHorizontal="true"
                            />

                        <ImageButton
                            android:id="@+id/listRed"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/list_red"
                            android:layout_marginTop="252dp"
                            android:layout_marginLeft="70dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/listOrange"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/list_orange"
                            android:layout_marginTop="252dp"
                            android:layout_marginLeft="110dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/listYellow"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/list_yellow"
                            android:layout_marginTop="252dp"
                            android:layout_centerHorizontal="true"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/listGreen"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/list_green"
                            android:layout_marginTop="252dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="110dp"
                            android:background="@null"
                            android:scaleType="centerInside" />

                        <ImageButton
                            android:id="@+id/listBlue"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/list_blue"
                            android:layout_marginTop="252dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="70dp"
                            android:background="@null"
                            android:scaleType="centerInside" />
                    </RelativeLayout>



                </LinearLayout>
            </com.sothree.slidinguppanel.SlidingUpPanelLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/abc_action_bar_default_height_material"
                    android:background="?attr/colorPrimary"
                    android:minHeight="?attr/actionBarSize"
                    app:theme="@style/ToolbarTheme"/>
            </LinearLayout>

        </RelativeLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#c7c7c7"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/drawer"
            app:itemTextColor="@color/nav_item_text"
            app:itemBackground="@drawable/nav_item_background"
            app:itemIconTint="#000000"/>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>